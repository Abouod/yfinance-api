<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Purchase Request Form</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles/purchaseRequest.css">
    <!-- FontAwesome 5 -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css">
</head>

<body>
    <nav class="custom-navbar">
        <div class="navbar-container">
            <div class="logo-container">
                <img class="logo" src="/images/Sophic-Logo-rotating-globe-2.gif" alt="Sophic Logo">
                <span class="bar">|</span>
                <span class="navbar-text">Sophic RPA Document Automation</span> <!-- Add text here -->
            </div>
            <!-- Example dropdown menu -->
            <div class="btn-group">
                <button type="button" class="btn custom-btn btn-primary dropdown-toggle" data-bs-toggle="dropdown"
                    aria-haspopup="true" aria-expanded="false">
                    <img src="/images/menu.png" alt="Bars Image">
                </button>
                <div class="dropdown-menu">
                    <a class="dropdown-item" href="/index">Home Page</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="/signout">Signout</a>
                </div>
            </div>
        </div>
    </nav>


    <div class="container shadow rounded bg-white">
        <div class="row">
            <div class="shadow rounded">
                <div class="row form-header">
                    <div class="d-flex justify-content-between align-items-center p-4">
                        <h4 style="color: white;" class="text-right">Purchase Request Form</h4>
                    </div>
                </div>
                <div class="row p-4">
                    <div class="col-md-3">
                        <label class="labels">Purchase Department</label>
                        <input type="text" class="form-control" required>
                    </div>
                    <div class="col-md-3">
                        <label class="labels">Internal Use</label>
                        <input type="text" class="form-control" required>
                    </div>
                    <div class="col-md-3">
                        <label class="labels">Date</label>
                        <input type="date" class="form-control" value="<%= new Date().toISOString().split('T')[0] %>"
                            required>
                    </div>
                    <div class="col-md-3">
                        <br>
                        <div class="btn-group" role="group" aria-label="Basic radio toggle button group">
                            <input type="radio" class="btn-check" name="btnradio" id="machine" autocomplete="off">
                            <label class="btn btn-outline-danger" for="machine">Machine Build</label>

                            <input type="radio" class="btn-check" name="btnradio" id="trading" autocomplete="off">
                            <label class="btn btn-outline-success" for="trading">Trading</label>
                        </div>
                    </div>
                </div>
                <div class="row px-4">
                    <div class="col-md-3">
                        <label class="labels">Requisition No.</label>
                        <input type="text"
                            value="<%= 'PR' + firstName.charAt(0) + lastName.charAt(0) + - + getFormattedDate()%>"
                            class="form-control" required>
                    </div>
                    <div class="col-md-3">
                        <label class="labels">Request by</label>
                        <input type="text" class="form-control" value="<%= firstName %> <%= lastName %>" required>
                    </div>
                    <div class="col-md-3">
                        <label class="labels">Online Purchase</label>
                        <input type="text" class="form-control" required>
                    </div>
                    <div class="col-md-3">
                        <label class="labels">Customer Name</label>
                        <input type="text" class="form-control" required>
                    </div>
                </div>
                <div class="row p-4">
                    <div class="col-md-6">
                        <label class="labels">Sophic Project Category</label>
                        <select aria-label="Default select example" name="SPC" type="text" class="form-select"
                            placeholder="Select Sophic Project Category">
                            <!-- <option value="" disabled selected hidden>Select Sophic Project Category</option> -->
                            <option value="AIMMS-Automated Intelligent Material Management System">AIMMS-Automated
                                Intelligent Material Management System</option>
                            <option value="AIVIS-Automated Intelligent Vision Inspection System">AIVIS-Automated
                                Intelligent Vision Inspection System</option>
                            <option value="AMR-Automated Guided Vehicle/Automated Mobile Robot">AMR-Automated Guided
                                Vehicle/Automated Mobile Robot</option>
                            <option value="ICCS-Intelligent Command Center System">ICCS-Intelligent Command Center
                                System</option>
                            <option value="AIHTS-Automated Intelligent Handling and Testing System">AIHTS-Automated
                                Intelligent Handling and Testing System</option>
                            <option value="ARSG-Augmented Reality Smart Glass">ARSG-Augmented Reality Smart Glass
                            </option>
                            <option value="OTHERS-Trading, PCB, Service, Office Use and etc">OTHERS-Trading, PCB,
                                Service, Office Use and etc</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="labels">Supplier Name</label>
                        <input type="text" class="form-control" required>
                    </div>
                    <div class="col-md-3">
                        <label class="labels">Supplier Type</label>
                        <div class="btn-group" role="group" aria-label="Basic radio toggle button group">
                            <input type="radio" class="btn-check" name="btnradio" id="oem" autocomplete="off">
                            <label class="btn btn-outline-danger" for="oem">OEM</label>

                            <input type="radio" class="btn-check" name="btnradio" id="oemd" autocomplete="off">
                            <label class="btn btn-outline-info" for="oemd">OEM D*</label>

                            <input type="radio" class="btn-check" name="btnradio" id="st-trading" autocomplete="off">
                            <label class="btn btn-outline-success" for="st-trading">TRADING</label>
                        </div>
                    </div>
                </div>
                <div class="row px-4">
                    <div class="col-md-3">
                        <label class="labels">Quotation No.</label>
                        <input type="text" class="form-control" required>
                    </div>
                    <div class="col-md-3">
                        <label class="labels">Customer PO</label>
                        <input type="text" class="form-control" required>
                    </div>
                    <div class="col-md-3">
                        <label class="labels">Type For Purchase</label>
                        <input type="text" class="form-control" required>
                    </div>
                    <div class="col-md-3">
                        <label class="labels">Project Description</label>
                        <input type="text" class="form-control" required>
                    </div>
                </div>
                <div class="row p-4">
                    <div class="col-md-12">
                        <!-- Button trigger modal -->
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                            data-bs-target="#staticBackdrop">
                            Add Product Information
                        </button>

                        <!-- Modal -->
                        <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false"
                            tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h1 class="modal-title fs-5" id="staticBackdropLabel">Product Information</h1>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                            aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="items-container"> <!-- Added class "items-container" -->
                                            <div class="item"> <!-- Added class "item" -->
                                                <table class="table  table-light table-hover m-0 p-0">
                                                    <thead>
                                                        <tr>
                                                            <th scope="col" style="width: 5%;"><small>Item</small></th>
                                                            <th scope="col" style="width: 5%;"><small>Part No.</small>
                                                            </th>
                                                            <th scope="col" style="width: 10%;"><small>Brand</small>
                                                            </th>
                                                            <th scope="col" style="width: 10%;">
                                                                <small>Description</small>
                                                            </th>
                                                            <th scope="col" style="width: 10%;"><small>Date
                                                                    Required</small></th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <tr>
                                                            <th scope="row">1</th>
                                                            <td><input type="text" class="form-control required"
                                                                    placeholder="Part Number"></td>
                                                            <td><input type="text" class="form-control required"
                                                                    placeholder="Brand">
                                                            </td>
                                                            <td><textarea class="form-control"
                                                                    id="exampleFormControlTextarea1" rows="3"
                                                                    placeholder="Description"></textarea></td>
                                                            <td>
                                                                <input type="date" class="form-control"
                                                                    placeholder="Date">
                                                            </td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                                <table class="table  table-light table-hover m-0 p-0">

                                                    <thead>
                                                        <tr>
                                                            <th scope="col"><small>Qty</small></th>
                                                            <th scope="col"><small>Currency</small></th>
                                                            <th scope="col"><small>LPP/Target Unit Price</small></th>
                                                            <th scope="col"><small>Delivery Term</small></th>
                                                            <th scope="col"><small>Lead Time</small></th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <tr>
                                                            <td><input type="number" class="form-control required"
                                                                    placeholder="Quantity">
                                                            </td>
                                                            <td><input type="text" class="form-control required"
                                                                    placeholder="Currency">
                                                            </td>
                                                            <td><input type="text" class="form-control required"
                                                                    placeholder="LPP/Target Unit Price"></td>
                                                            <td><input type="text" class="form-control required"
                                                                    placeholder="Delivery Term">
                                                            </td>
                                                            <td><input type="text" class="form-control required"
                                                                    placeholder="Lead Time"></td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                                <table class="table  table-light table-hover mb-2 p-0">

                                                    <thead>
                                                        <tr>
                                                            <th scope="col"><small>Tax (%)</small></th>
                                                            <th scope="col"><small>Total Price</small></th>
                                                            <th scope="col"><small>Exwork</small></th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <tr>
                                                            <td><input type="text" class="form-control required"
                                                                    placeholder="Tax (%)">
                                                            </td>
                                                            <td><input type="text" class="form-control required"
                                                                    placeholder="Total Price"></td>
                                                            <td><input type="text" class="form-control required"
                                                                    placeholder="Exwork address/remark ">
                                                            </td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary"
                                            data-bs-dismiss="modal">Close</button>
                                        <button type="button" class="btn btn-primary" id="addItemBtn">Add Item</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script>
        $(document).ready(function () {
            let itemNumber = 1;

            // Add item function
            $("#addItemBtn").click(function () {
                let newItem = $(".item").first().clone(); // Clone the first item
                itemNumber++; // Increment item number
                newItem.find("th[scope='row']").text(itemNumber); // Update item number inside <th>
                $(".items-container").append(newItem); // Append the new item
            });
        });

        // Get the navbar
        var navbar = document.querySelector(".custom-navbar");

        // Get the initial position of the page
        var prevScrollpos = window.pageYOffset;

        // Function to handle scroll event
        window.onscroll = function () {
            // Get the current scroll position
            var currentScrollPos = window.pageYOffset;

            // If the user scrolls down
            if (prevScrollpos < currentScrollPos) {
                // Hide the navbar by adding a class
                navbar.classList.add("hidden");
            } else {
                // Show the navbar by removing the class
                navbar.classList.remove("hidden");
            }

            // Update the previous scroll position
            prevScrollpos = currentScrollPos;
        }


    </script>


</body>

</html>