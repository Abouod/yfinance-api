<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile Page</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles/profile.css">

    <!-- FontAwesome 5 -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css">
</head>

<body>
    <nav class="custom-navbar">
        <div class="navbar-container">
            <div class="logo-container">
                <img class="logo" src="/images/Sophic-Logo-rotating-globe-2.gif" alt="Sophic Logo">
                <span class="bar">|</span>
                <span class="navbar-text">Sophic RPA Document Automation</span> <!-- Add text here -->
            </div>
            <!-- Example dropdown menu -->
            <div class="btn-group">
                <button type="button" class="btn custom-btn btn-primary dropdown-toggle" data-bs-toggle="dropdown"
                    aria-haspopup="true" aria-expanded="false">
                    <img src="/images/menu.png" alt="Bars Image">
                </button>
                <div class="dropdown-menu">
                    <a class="dropdown-item" href="/index">Home Page</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="/auth/signout">Signout</a>
                </div>
            </div>
        </div>
    </nav>

    <div class="container shadow rounded bg-white">
        <div class="row">
            <div class="shadow rounded">
                <!-- Adding 3 units padding to all sides and 5 units padding to the top and bottom -->
                <form action="/userProfile/save-profile" method="POST" enctype="multipart/form-data">
                    <div class="row profile-header rounded">
                        <div class="d-flex justify-content-between align-items-center p-4">
                            <h4 style="color: white;" class="text-right">Profile Settings</h4>
                        </div>
                    </div>
                    <div class="row p-4"> <!-- Padding 4 -->
                        <div class="col-md-3">
                            <label class="labels">Name</label>
                            <input id="fullName" name="fullName" type="text" class="form-control"
                                value="<%= firstName %> <%= lastName %>" readonly>
                        </div>
                        <div class="col-md-4">
                            <label class="labels">Email</label>
                            <input id="email" type="text" class="form-control" value="<%= emailAddress %>" readonly>
                        </div>
                        <div class="col-md-2">
                            <label class="labels">Department</label>
                            <select aria-label="Default select example" name="department" type="text"
                                class="form-select" placeholder="Select Department">
                                <% if(userDetails && userDetails.department) { %>
                                    <option value="<%= userDetails.department %>" selected>
                                        <%= userDetails.department %>
                                    </option>
                                    <% } else { %>
                                        <option value="" selected>Select Department</option>
                                        <% } %>
                                            <option value="Technical">Technical</option>
                                            <option value="Human Resources">HR</option>
                                            <option value="Finance">Finance</option>
                                            <option value="Logistic">Logistic</option>
                                            <option value="Purchase">Purchase</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="labels">Employee ID</label>
                            <input type="text" class="form-control" name="employee_id"
                                value="<%= userDetails ? userDetails.employee_id : '' %>">
                        </div>
                    </div>
                    <div class="row px-4"> <!-- Padding horizontal 4 -->
                        <div class="col-md-3">
                            <label class="labels">Job Title</label>
                            <input type="text" class="form-control" name="job_title"
                                value="<%= userDetails ? userDetails.job_title : '' %>">
                        </div>
                        <div class="col-md-3">
                            <label class="labels">Superior Name</label>
                            <input type="text" class="form-control" name="superior_name"
                                value="<%= userDetails ? userDetails.superior_name : '' %>">
                        </div>
                        <div class="col-md-3">
                            <label class="labels">Superior ID</label>
                            <input type="text" class="form-control" name="superior_id"
                                value="<%= userDetails ? userDetails.superior_id : '' %>">
                        </div>
                        <div class="col-md-3">
                            <label class="labels">Superior Email</label>
                            <input type="text" class="form-control" name="superior_email"
                                value="<%= userDetails ? userDetails.superior_email : '' %>">
                        </div>
                    </div>
                    <div class="row p-4"> <!-- Padding 4 -->
                        <div class="col-md-3">
                            <label class="labels">Division</label>
                            <input type="text" class="form-control" name="division"
                                value="<%= userDetails ? userDetails.division : '' %>">
                        </div>
                        <div class="col-md-3">
                            <label class="labels">Manager</label>
                            <input type="text" class="form-control" name="manager_name"
                                value="<%= userDetails ? userDetails.manager_name : '' %>">
                        </div>
                        <div class="col-md-3">
                            <label class="labels">Manager ID</label>
                            <input type="text" class="form-control" name="manager_id"
                                value="<%= userDetails ? userDetails.manager_id : '' %>">
                        </div>
                        <div class="col-md-3">
                            <label class="labels">Manager Email</label>
                            <input type="text" class="form-control" name="manager_email"
                                value="<%= userDetails ? userDetails.manager_email : '' %>">
                        </div>
                        <!-- Add more pairs of columns as needed -->
                    </div>
                    <div class="row px-4">
                        <div class="col-md-3">
                            <label class="labels">Phone Number</label>
                            <input type="text" class="form-control" name="phone_number"
                                value="<%= userDetails ? userDetails.phone_number : '' %>">
                        </div>
                        <div class="col-md-3">
                            <label class="labels">Address Line</label>
                            <input type="text" class="form-control" name="address"
                                value="<%= userDetails ? userDetails.address : '' %>">
                        </div>
                        <div class="col-md-3">
                            <label class="labels">Bank Name</label>
                            <input type="text" class="form-control" name="bank_name"
                                value="<%= userDetails ? userDetails.bank_name : '' %>">
                        </div>
                        <div class="col-md-3">
                            <label class="labels">Bank Account</label>
                            <input type="text" class="form-control" name="bank_account"
                                value="<%= userDetails ? userDetails.bank_account : '' %>">
                        </div>
                    </div>
                    <div class="row p-4">
                        <div class="col-md-3">
                            <label class="labels">Passport</label>
                            <input type="text" class="form-control" name="passport"
                                value="<%= userDetails ? userDetails.passport : '' %>">
                        </div>
                        <div class="col-md-3">
                            <!-- Button trigger modal -->
                            <br>
                            <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                                data-bs-target="#exampleModal">
                                Upload Signature
                            </button>
                        </div>

                        <!-- Modal -->
                        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                            aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h1 class="modal-title fs-5" id="exampleModalLabel">Signature</h1>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                            aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <label class="labels">Digital Signature:</label>
                                        <input type="file" class="form-control" id="signature" name="signature">
                                    </div>
                                    <div class="modal-footer">
                                        <% if (userDetails && userDetails.signature) { %>
                                            <!-- Display the uploaded image -->
                                            <img src="/uploads/<%= userDetails.signature %>" alt="Signature"
                                                class="uploaded-image">
                                            <% } else { %>
                                                <!-- Display a message if no image is uploaded -->
                                                <div class="alert alert-warning" role="alert">
                                                    Please upload an image to view it.
                                                </div>
                                                <% } %>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary"
                                            data-bs-dismiss="modal">Close</button>
                                        <button type="submit" class="btn btn-primary">Save changes</button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="p-4 text-center">
                            <% if(errorMessage) { %>
                                <div class="alert alert-danger alert-sm alert-dismissible fade show" role="alert">
                                    <%= errorMessage %>
                                        <button type="button" class="btn-close" data-bs-dismiss="alert"
                                            aria-label="Close"></button>
                                </div>
                                <% } else if (successMessage) { %>
                                    <div class="alert alert-success alert-sm alert-dismissible fade show" role="alert">
                                        <%= successMessage %>
                                            <button type="button" class="btn-close" data-bs-dismiss="alert"
                                                aria-label="Close"></button>
                                    </div>
                                    <% } %>
                                        <button class="btn btn-primary profile-button" type="submit">Save
                                            Profile</button>
                                        <button type="button" class="btn btn-outline-success" data-bs-toggle="modal"
                                            data-bs-target="#staticBackdrop">
                                            Change Password
                                        </button>
                        </div>

                </form>
                <!-- Modal -->
                <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false"
                    tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                    <div class="modal-dialog modal-lg"> <!-- modal-lg class to make it wider -->
                        <div class="modal-content">
                            <div class="modal-header">
                                <h1 class="modal-title fs-5" id="staticBackdropLabel">Change Your
                                    Password</h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                            </div>
                            <form id="changePasswordForm" action="/userProfile/update-password" method="POST">
                                <div class="modal-body">
                                    <div class="row">
                                        <div class="col-md-12 mb-3">
                                            <div class="d-flex flex-column">
                                                <div class="d-flex align-items-center">
                                                    <label for="currentPassword" class="form-label">Current
                                                        Password:</label>
                                                    <span class="toggle-password"
                                                        onclick="togglePasswordVisibility(this)">
                                                        <i class="fas fa-eye-slash"></i>
                                                    </span>
                                                </div>
                                                <input type="password" class="form-control" id="currentPassword"
                                                    name="currentPassword" required>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="d-flex flex-column">
                                                <div class="d-flex align-items-center">
                                                    <label for="newPassword" class="form-label">New
                                                        Password:</label>
                                                    <span class="toggle-password"
                                                        onclick="togglePasswordVisibility(this)">
                                                        <i class="fas fa-eye-slash"></i>
                                                    </span>
                                                </div>
                                                <input type="password" class="form-control" id="newPassword"
                                                    name="newPassword" required>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="d-flex flex-column">
                                                <div class="d-flex align-items-center">
                                                    <label for="confirmNewPassword" class="form-label">Confirm
                                                        Password:</label>
                                                    <span class="toggle-password"
                                                        onclick="togglePasswordVisibility(this)">
                                                        <i class="fas fa-eye-slash"></i>
                                                    </span>
                                                </div>
                                                <input type="password" class="form-control" id="confirmNewPassword"
                                                    name="confirmNewPassword" required>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- Add more rows and columns as needed -->
                                </div>
                                <div class="text-center">
                                    <div class="modal-footer justify-content-start">
                                        <button type="submit" class="btn btn-success">Update Password</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    <footer class="footer">
        <div id="footer">
            <div id="left-column">
                <span id="copyright">
                    Â© 2023 Copyright Sophic Automation Sdn. Bhd. All Rights Reserved.
                    <br>
                    Designed by Sophic Automation Sdn. Bhd.
                </span>
            </div>
            <div id="right-column">
                <span id="version">v1.0.0</span>
            </div>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script>
        function togglePasswordVisibility(icon) {
            var passwordInput = icon.parentElement.nextElementSibling; // Select the input field next to the icon
            var iconElement = icon.querySelector('i');

            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
            } else {
                passwordInput.type = 'password';
            }

            // Toggle the icon's class
            if (iconElement.classList.contains('fa-eye')) {
                iconElement.classList.remove('fa-eye');
                iconElement.classList.add('fa-eye-slash');
            } else {
                iconElement.classList.remove('fa-eye-slash');
                iconElement.classList.add('fa-eye');
            }
        }

        $(document).ready(function () {
            // Fade out the success message after 2 seconds
            setTimeout(function () {
                $(".alert-success").fadeOut("slow");
            }, 2000);
        });
    </script>
</body>

</html>