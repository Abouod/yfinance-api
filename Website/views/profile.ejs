<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile Page</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles/profile.css">

    <!-- FontAwesome 5 -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css">
</head>

<body>
    <nav class="custom-navbar">
        <div class="navbar-container">
            <div class="logo-container">
                <img class="logo" src="/images/Sophic-Logo-rotating-globe-2.gif" alt="Sophic Logo">
                <span class="bar">|</span>
                <span class="navbar-text">Sophic RPA Document Automation</span> <!-- Add text here -->
            </div>
            <!-- Example dropdown menu -->
            <div class="btn-group">
                <button type="button" class="btn custom-btn btn-primary dropdown-toggle" data-bs-toggle="dropdown"
                    aria-haspopup="true" aria-expanded="false">
                    <img src="/images/menu.png" alt="Bars Image">
                </button>
                <div class="dropdown-menu">
                    <a class="dropdown-item" href="/index">Home Page</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="/auth/signout">Signout</a>
                </div>
            </div>
        </div>
    </nav>

    <div class="container shadow rounded bg-white">
        <div class="row">
            <div class="shadow rounded">
                <!-- Adding 3 units padding to all sides and 5 units padding to the top and bottom -->
                <form action="/userProfile/save-profile" method="POST">
                    <div class="row profile-header rounded">
                        <div class="d-flex justify-content-between align-items-center p-4">
                            <h4 style="color: white;" class="text-right">Profile Settings</h4>
                            <nav>
                                <div class="nav nav-tabs" id="nav-tab" role="tablist">
                                    <button class="nav-link nav-link-custom active" id="nav-personal-tab"
                                        data-bs-toggle="tab" data-bs-target="#nav-personal" type="button" role="tab"
                                        aria-controls="nav-personal" aria-selected="true">Personal</button>
                                    <button class="nav-link nav-link-custom" id="nav-employment-tab"
                                        data-bs-toggle="tab" data-bs-target="#nav-employment" type="button" role="tab"
                                        aria-controls="nav-employment" aria-selected="false">Employment</button>
                                    <button class="nav-link nav-link-custom" id="nav-manager-tab" data-bs-toggle="tab"
                                        data-bs-target="#nav-manager" type="button" role="tab"
                                        aria-controls="nav-manager" aria-selected="false">Manager</button>
                                </div>
                            </nav>
                        </div>
                    </div>
                    <!-- Tabs Content -->
                    <div class="tab-content" id="nav-tabContent">
                        <!-- Personal Tab -->
                        <div class="tab-pane fade show active" id="nav-personal" role="tabpanel"
                            aria-labelledby="nav-personal-tab" tabindex="0">
                            <div class="row p-4"> <!-- Padding 4 -->
                                <div class="col-md-6">
                                    <label class="col-form-label">Name</label>
                                    <input id="fullName" name="fullName" type="text" class="form-control"
                                        value="<%= firstName %> <%= lastName %>" readonly>
                                </div>
                                <div class="col-md-6">
                                    <label class="col-form-label">Email</label>
                                    <input id="email" type="text" class="form-control" value="<%= emailAddress %>"
                                        readonly>
                                </div>
                            </div>
                            <div class="row px-4">
                                <div class="col-md-6">
                                    <label class="col-form-label">Phone Number</label>
                                    <input type="text" class="form-control" name="phone_number"
                                        value="<%= userDetails ? userDetails.phone_number : '' %>">
                                </div>
                                <div class="col-md-6">
                                    <label class="col-form-label">Address Line</label>
                                    <input type="text" class="form-control" name="address"
                                        value="<%= userDetails ? userDetails.address : '' %>">
                                </div>
                            </div>
                            <div class="row p-4">
                                <div class="col-md-4">
                                    <label class="col-form-label">Passport</label>
                                    <input type="text" class="form-control" name="passport"
                                        value="<%= userDetails ? userDetails.passport : '' %>">
                                </div>
                                <div class="col-md-4">
                                    <label class="col-form-label">Bank Name</label>
                                    <input type="text" class="form-control" name="bank_name"
                                        value="<%= userDetails ? userDetails.bank_name : '' %>">
                                </div>
                                <div class="col-md-4">
                                    <label class="col-form-label">Bank Account</label>
                                    <input type="text" class="form-control" name="bank_account"
                                        value="<%= userDetails ? userDetails.bank_account : '' %>">
                                </div>
                            </div>
                        </div>
                        <!-- Employment Tab -->
                        <div class="tab-pane fade" id="nav-employment" role="tabpanel"
                            aria-labelledby="nav-employment-tab" tabindex="0">
                            <div class="row p-4">
                                <div class="col-md-6">
                                    <label class="col-form-label">Employee ID</label>
                                    <input type="text" class="form-control" name="employee_id"
                                        value="<%= userDetails ? userDetails.employee_id : '' %>">
                                </div>
                                <div class="col-md-6">
                                    <label class="col-form-label">Department</label>
                                    <select aria-label="Default select example" name="department" class="form-select">
                                        <% if(userDetails && userDetails.department) { %>
                                            <option value="<%= userDetails.department %>" selected>
                                                <%= userDetails.department %>
                                            </option>
                                            <% } else { %>
                                                <option value="" selected>Select Department</option>
                                                <% } %>
                                                    <option value="Technical">Technical</option>
                                                    <option value="Human Resources">HR</option>
                                                    <option value="Finance">Finance</option>
                                                    <option value="Logistic">Logistic</option>
                                                    <option value="Purchase">Purchase</option>
                                    </select>
                                </div>
                            </div>
                            <div class="row px-4">
                                <div class="col-md-6">
                                    <label class="col-form-label">Job Title</label>
                                    <input type="text" class="form-control" name="job_title"
                                        value="<%= userDetails ? userDetails.job_title : '' %>">
                                </div>
                                <div class="col-md-6">
                                    <label class="col-form-label">Division</label>
                                    <input type="text" class="form-control" name="division"
                                        value="<%= userDetails ? userDetails.division : '' %>">
                                </div>
                            </div>
                            <div class="row p-4">
                                <div class="col-md-12">
                                    <!-- Trigger Signature Modal -->
                                    <br>
                                    <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                                        data-bs-target="#exampleModal">
                                        Upload Signature
                                    </button>
                                    <br>
                                </div>
                            </div>
                        </div>
                        <!-- Manager Tab -->
                        <div class="tab-pane fade" id="nav-manager" role="tabpanel" aria-labelledby="nav-manager-tab"
                            tabindex="0">
                            <div class="row p-4">
                                <div class="col-md-6">
                                    <label class="col-form-label">Superior Name</label>
                                    <input type="text" class="form-control" name="superior_name"
                                        value="<%= userDetails ? userDetails.superior_name : '' %>">
                                </div>
                                <div class="col-md-6">
                                    <label class="col-form-label">Manager Name</label>
                                    <input type="text" class="form-control" name="manager_name"
                                        value="<%= userDetails ? userDetails.manager_name : '' %>">
                                </div>
                            </div>
                            <div class="row px-4">
                                <div class="col-md-6">
                                    <label class="col-form-label">Superior ID</label>
                                    <input type="text" class="form-control" name="superior_id"
                                        value="<%= userDetails ? userDetails.superior_id : '' %>">
                                </div>
                                <div class="col-md-6">
                                    <label class="col-form-label">Manager ID</label>
                                    <input type="text" class="form-control" name="manager_id"
                                        value="<%= userDetails ? userDetails.manager_id : '' %>">
                                </div>
                            </div>
                            <div class="row p-4">
                                <div class="col-md-6">
                                    <label class="col-form-label">Superior Email</label>
                                    <input type="text" class="form-control" name="superior_email"
                                        value="<%= userDetails ? userDetails.superior_email : '' %>">
                                </div>
                                <div class="col-md-6">
                                    <label class="col-form-label">Manager Email</label>
                                    <input type="text" class="form-control" name="manager_email"
                                        value="<%= userDetails ? userDetails.manager_email : '' %>">
                                </div>
                            </div>
                        </div>
                        <div class="p-4 text-center">
                            <% if(errorMessage) { %>
                                <div class="alert alert-danger" role="alert">
                                    <%= errorMessage %>
                                </div>
                                <% } else if (successMessage) { %>
                                    <div class="alert alert-success" role="alert">
                                        <%= successMessage %>
                                    </div>
                                    <% } %>
                                        <button class="btn btn-primary profile-button" type="submit">Save
                                            Profile</button>
                                        <button type="button" class="btn btn-outline-success" data-bs-toggle="modal"
                                            data-bs-target="#staticBackdrop">
                                            Change Password
                                        </button>
                        </div>
                    </div>
                </form>
            </div>
            <!-- Signature Modal -->
            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                aria-hidden="true">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5" id="exampleModalLabel">Signature</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <form action="/userProfile/signature" method="POST" enctype="multipart/form-data">
                            <div class="modal-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <label class="col-form-label">Digital Signature:</label>
                                        <input type="file" class="form-control" id="signature" name="signature">
                                        <br><br>
                                        <label class="col-form-label">Manual Signature:</label>
                                        <div class="border border-secondary-subtle rounded">
                                            <canvas id="signatureCanvas" width="400" height="200"></canvas>
                                        </div>
                                        <button type="button" onclick="clearSignature()"
                                            class="btn btn-danger mt-2">Clear</button>
                                        <input type="hidden" id="signatureData" name="signatureData">
                                    </div>
                                    <div class="col-md-6">
                                        <br>
                                        <% if (userDetails && userDetails.signature) { %>
                                            <!-- Display the uploaded image -->
                                            <img src="/uploads/<%= userDetails.signature %>" alt="Signature"
                                                class="uploaded-image">
                                            <% } else { %>
                                                <!-- Display a message if no image is uploaded -->
                                                <div class="alert alert-warning" role="alert">
                                                    Please upload & save your signature to view it.
                                                </div>
                                                <% } %>
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <button type="submit" onclick="saveSignature()" class="btn btn-primary">Save
                                    changes</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <!-- Password Change Modal -->
            <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
                aria-labelledby="staticBackdropLabel" aria-hidden="true">
                <div class="modal-dialog modal-lg"> <!-- modal-lg class to make it wider -->
                    <div class="modal-content">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5" id="staticBackdropLabel">Change Your
                                Password</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <form id="changePasswordForm" action="/userProfile/update-password" method="POST">
                            <div class="modal-body">
                                <div class="row">
                                    <div class="col-md-12 mb-3">
                                        <div class="d-flex flex-column">
                                            <div class="d-flex align-items-center">
                                                <label for="currentPassword" class="form-label">Current
                                                    Password:</label>
                                                <span class="toggle-password" onclick="togglePasswordVisibility(this)">
                                                    <i class="fas fa-eye-slash"></i>
                                                </span>
                                            </div>
                                            <input type="password" class="form-control" id="currentPassword"
                                                name="currentPassword" required>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="d-flex flex-column">
                                            <div class="d-flex align-items-center">
                                                <label for="newPassword" class="form-label">New
                                                    Password:</label>
                                                <span class="toggle-password" onclick="togglePasswordVisibility(this)">
                                                    <i class="fas fa-eye-slash"></i>
                                                </span>
                                            </div>
                                            <input type="password" class="form-control" id="newPassword"
                                                name="newPassword" required>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="d-flex flex-column">
                                            <div class="d-flex align-items-center">
                                                <label for="confirmNewPassword" class="form-label">Confirm
                                                    Password:</label>
                                                <span class="toggle-password" onclick="togglePasswordVisibility(this)">
                                                    <i class="fas fa-eye-slash"></i>
                                                </span>
                                            </div>
                                            <input type="password" class="form-control" id="confirmNewPassword"
                                                name="confirmNewPassword" required>
                                        </div>
                                    </div>
                                </div>
                                <!-- Add more rows and columns as needed -->
                            </div>
                            <div class="text-center">
                                <div class="modal-footer justify-content-start">
                                    <button type="submit" class="btn btn-success">Update Password</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <footer class="footer">
        <div id="footer">
            <div id="left-column">
                <span id="copyright">
                    © 2023 Copyright Sophic Automation Sdn. Bhd. All Rights Reserved.
                    <br>
                    Designed by Sophic Automation Sdn. Bhd.
                </span>
            </div>
            <div id="right-column">
                <span id="version">v1.0.0</span>
            </div>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <!-- Include the latest version of Signature Pad library -->
    <script src="https://cdn.jsdelivr.net/npm/signature_pad@4.1.7/dist/signature_pad.umd.min.js"></script>
    <script>
        function togglePasswordVisibility(icon) {
            var passwordInput = icon.parentElement.nextElementSibling; // Select the input field next to the icon
            var iconElement = icon.querySelector('i');

            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
            } else {
                passwordInput.type = 'password';
            }

            // Toggle the icon's class
            if (iconElement.classList.contains('fa-eye')) {
                iconElement.classList.remove('fa-eye');
                iconElement.classList.add('fa-eye-slash');
            } else {
                iconElement.classList.remove('fa-eye-slash');
                iconElement.classList.add('fa-eye');
            }
        }

        $(document).ready(function () {
            // Fade out the success message after 2 seconds
            setTimeout(function () {
                $(".alert-success").fadeOut("slow");
            }, 2000);

            // Fade out the error message after 2 seconds
            setTimeout(function () {
                $(".alert-danger").fadeOut("slow");
            }, 2000);
        });

        var canvas = document.getElementById('signatureCanvas');
        var signaturePad = new SignaturePad(canvas);

        function clearSignature() {
            signaturePad.clear(); // Clear the signature canvas
        }

        // Get the input element by its ID
        var signatureInput = document.getElementById("signature");

        function saveSignature() {
            if (!signaturePad.isEmpty()) {
                var signatureData = signaturePad.toDataURL(); // Get the signature data as a data URL
                document.getElementById('signatureData').value = signatureData; // Set the value of the hidden input
            } else if (signatureInput.files.length != 0) {
                //Do nothing
            } else {
                alert("Please provide a signature before saving.");
            }
        }
    </script>
</body>

</html>