<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile Page</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles/profile.css">

    <!-- FontAwesome 5 -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css">
</head>

<body>
    <nav class="custom-navbar">
        <div class="navbar-container">
            <div class="logo-container">
                <img class="logo" src="/images/Sophic-Logo-rotating-globe-2.gif" alt="Sophic Logo">
                <span class="bar">|</span>
                <span class="navbar-text">Sophic RPA Document Automation</span> <!-- Add text here -->
            </div>
            <!-- Example dropdown menu -->
            <div class="btn-group">
                <button type="button" class="btn custom-btn btn-primary dropdown-toggle" data-bs-toggle="dropdown"
                    aria-haspopup="true" aria-expanded="false">
                    <img src="/images/menu.png" alt="Bars Image">
                </button>
                <div class="dropdown-menu">
                    <a class="dropdown-item" href="/index">Home Page</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="/signout">Signout</a>
                </div>
            </div>
        </div>
    </nav>

    <div class="container shadow rounded bg-white mt-5 mb-5">
        <div class="row">
            <div class="p-4 py-5">
                <!-- Adding 3 units padding to all sides and 5 units padding to the top and bottom -->
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="text-right">Profile Settings</h4>
                </div>
                <div class="row mt-2"> <!-- Margin top 2 -->
                    <div class="col-md-6">
                        <label class="labels">Name</label>
                        <input type="text" class="form-control" placeholder="" value="<%= user.name %>" readonly>
                    </div>
                    <div class="col-md-6">
                        <label class="labels">Department</label>
                        <input type="text" class="form-control" placeholder="surname" value="<%= user.department %>"
                            readonly>
                    </div>
                </div>
                <div class="row mt-3"> <!-- Margin bottom 3 -->
                    <div class="col-md-6">
                        <label class="labels">Superior</label>
                        <input type="text" class="form-control" placeholder="" value="<%= user.superior %>" readonly>
                    </div>
                    <div class="col-md-6">
                        <label class="labels">Manager</label>
                        <input type="text" class="form-control" placeholder="enter address line 1"
                            value="<%= user.manager %>" readonly>
                    </div>
                    <!-- Add more pairs of columns as needed -->
                </div>
                <div class="row mt-3">
                    <div class="col-md-6">
                        <label class="labels">Phone Number</label>
                        <input type="text" class="form-control" placeholder="Enter your number" value="">
                    </div>
                    <div class="col-md-6">
                        <label class="labels">Job Title</label>
                        <input type="text" class="form-control" placeholder="Enter Job Title" value="">
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-12">
                        <label class="labels">Division</label>
                        <input type="text" class="form-control" placeholder="Enter your division" value="">
                    </div>
                </div>
                <!-- Modal -->
                <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false"
                    tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                    <div class="modal-dialog modal-lg"> <!-- modal-lg class to make it wider -->
                        <div class="modal-content">
                            <div class="modal-header">
                                <h1 class="modal-title fs-5" id="staticBackdropLabel">Change Your
                                    Password</h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="d-flex flex-column">
                                            <div class="d-flex align-items-center">
                                                <label for="currentPassword" class="form-label">Current
                                                    Password:</label>
                                                <span class="toggle-password" onclick="togglePasswordVisibility(this)">
                                                    <i class="fas fa-eye-slash"></i>
                                                </span>
                                            </div>
                                            <input type="password" class="form-control" id="currentPassword"
                                                name="currentPassword" required>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="d-flex flex-column">
                                            <div class="d-flex align-items-center">
                                                <label for="newPassword" class="form-label">New Password:</label>
                                                <span class="toggle-password" onclick="togglePasswordVisibility(this)">
                                                    <i class="fas fa-eye-slash"></i>
                                                </span>
                                            </div>
                                            <input type="password" class="form-control" id="newPassword"
                                                name="newPassword" required>
                                        </div>
                                    </div>
                                </div>
                                <!-- Add more rows and columns as needed -->
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <button type="button" class="btn btn-primary">Understood</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="mt-5 text-center">
                    <% if(errorMessage) { %>
                        <div class="alert alert-danger alert-sm" role="alert">
                            <%= errorMessage %>
                        </div>
                        <% } else if (successMessage) { %>
                            <div class="alert alert-success alert-sm" role="alert">
                                <%= successMessage %>
                            </div>
                            <% } %>
                                <button class="btn btn-primary profile-button" type="button">Save Profile</button>
                                <!-- Button trigger modal -->
                                <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                                    data-bs-target="#staticBackdrop">
                                    Change Password
                                </button>
                </div>
            </div>
        </div>
    </div>
    <footer class="footer">
        <div id="footer">
            <div id="left-column">
                <span id="copyright">
                    Â© 2023 Copyright Sophic Automation Sdn. Bhd. All Rights Reserved.
                    <br>
                    Designed by Sophic Automation Sdn. Bhd.
                </span>
            </div>
            <div id="right-column">
                <span id="version">v1.0.0</span>
            </div>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function togglePopup() {
            const overlay = document.getElementById('popupOverlay');
            overlay.classList.toggle('show');
        }

        function togglePasswordVisibility(icon) {
            var passwordInput = icon.parentElement.nextElementSibling; // Select the input field next to the icon
            var iconElement = icon.querySelector('i');

            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
            } else {
                passwordInput.type = 'password';
            }

            // Toggle the icon's class
            if (iconElement.classList.contains('fa-eye')) {
                iconElement.classList.remove('fa-eye');
                iconElement.classList.add('fa-eye-slash');
            } else {
                iconElement.classList.remove('fa-eye-slash');
                iconElement.classList.add('fa-eye');
            }
        }
    </script>
</body>

</html>